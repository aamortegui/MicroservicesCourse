@model ProductDto

<form asp-action="ProductEdit" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Edit Product</h1>
        <input asp-for="ProductId" hidden />

        <hr />
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Category Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="CategoryName" class="form-control" />
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Description</label>
                    </div>
                    <div class="col-10 pb-3">
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Image" class="form-control" />
                        <input asp-for="ImageUrl" hidden class="form-control" />
                        <input asp-for="ImageLocalPath" hidden class="form-control"/>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label for="validatePrice" class="control-label pt-2" style="font-size:20px;">Price</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input id="validatePrice" asp-for="Price" class="form-control" />
                        <span id="error-mensaje" class="text-danger"></span>
                    </div>
                    <div class="col-5 offset-2">

                        <a asp-action="ProductIndex" class="btn-primary btn form-control ">Back to List</a>
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Update" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.ImageUrl" class="w-100" alt="" />
            </div>
        </div>
    </div>
</form>

<script>
    function validarFormatoDecimal() {
        const input = document.getElementById('validatePrice').value;
        const mensajeError = document.getElementById('error-mensaje');

        if (input.includes('.')) {
            mensajeError.textContent = "Use comma (,) as decimal sepparator.";
            return false; // cancela el submit
        }
        // (Opcional) Validar formato numérico correcto
        const regex = /^\d+(,\d{1,2})?$/;
        if (!regex.test(input)) {
            mensajeError.textContent = "Invalid format. Use comma as decimal sepparator (ej: 12,34).";
            return false;
        }

        mensajeError.textContent = "";
        return true; // continúa el submit
    }
</script>