{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=Mango_Auth;TrustServerCertificate=true; Integrated Security=true"
  },
  "ApiSettings": {
    "JwtOptions": {
      //This is used to sign and verify the JWT token
      "Secret": "This is used to sign and verify the JWT token",
      //Issuer is who issues the token
      "Issuer": "mango-auth-api",
      //Audience is who the token is intended for
      "Audience": "mango-client"
    }
  },
  "TopicAndQueueNames": {
    "RegisterUserQueue": "registeruser"
  }
}
